page{
  height: 100%;
  background-color: #b3d4db;
}

.container{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-avatar{
  margin-top:160rpx;
  width: 200rpx;
  height:200rpx;
  border-radius: 50%;
}

.user-name{
  margin-top: 100rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.moto-container{
  margin-top: 200rpx;
  width:200rpx;
  height: 80rpx;
  text-align: center;
  border:1px solid #405f80;
  border-radius: 5rpx;
}
.moto{
  font-size: 22rpx;
  font-weight: bold;
  line-height: 80rpx;
  color: #405f80;
}