.post-container{
  display: flex;
  flex-direction:column;
  margin-top: 20rpx;
  margin-bottom:40rpx;
  padding-bottom:5rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
}

.post-author-date{
  margin:10rpx 0 20rpx 10rpx;
}

.post-author{
  width:60rpx;
  height:60rpx;
  vertical-align: middle;
}

.post-date{
  margin-left: 20rpx;
  margin-bottom: 10rpx;
  vertical-align: middle;
  font-size: 13px;
}

.post-image{
  width: 100%;
  height: 340rpx;
  margin: auto 0;
  margin-bottom: 15rpx;
}

.post-title{
  font-size: 17px;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
  margin-left: 10rpx;
}

.post-content{
  color:#666;
  font-size: 14px;
  margin-bottom:20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}

.post-like{
  font-size: 7px;
  line-height: 16rpx;
  margin-left: 10rpx;
}

.post-like-image{
  height: 16rpx;
  width: 16rpx;
  margin-right: 8rpx;
  vertical-align: middle;
}

.post-like-font{
  vertical-align: middle;
  margin-right: 20rpx;
}